page {
  height: 100%;
  background-color: #F4F4F4;
}

.page {
  padding: 20px;
  box-sizing: border-box;
}

.item {
  margin-bottom: 20px;
  box-shadow: 0 6px 16px -8px rgba(0,0,0,.08), 0 9px 28px 0 rgba(0,0,0,.05), 0 12px 48px 16px rgba(0,0,0,.03);
  border-radius: 6px;
  padding: 10px 20px;
  box-sizing: border-box;
}

.time-icon {
  width: 20px;
  height: 20px;
  vertical-align: top;
  position: relative;
  top: 1px;
  margin-right: 10px;
}

.go-icon {
  width: 30px;
  height: 30px;
  vertical-align: top;
  float: right;
  position: relative;
  top: -3px;
  right: -10px;
}

.time {
  vertical-align: top;
  color: rgba(0,0,0,.65);
}

.header {
  margin-bottom: 10px;
}

.name {
  color: rgba(0,0,0,.65);
}

.type {
  font-size: 12px;
  display: inline-block;
  color: rgba(0,0,0,.65);
  border: 1px solid rgba(0,0,0,.4);
  position: relative;
  top: -1px;
  margin-left: 10px;
}

.amount {
  float: right;
  color: #4F67F9;
}

.body {
  padding: 0 0 10px 30px;
  box-sizing: border-box;
}

.footer {
  border-top: 1px solid rgba(0,0,0,.1);
  padding-top: 10px;
  box-sizing: border-box;
  font-size: 12px;
}

.status {
  color: rgba(0,0,0,.4);
}

.rest {
  color: rgba(0,0,0,.65);
  float: right;
}